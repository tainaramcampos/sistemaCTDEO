@model IEnumerable<WebApplicationCTDEO.Models.Modalidade>

<div class="form-group col-md-10">
    <div class="row">
        <div class="form-group col-4">
            @Html.LabelFor(model => model.Nome, "Modalidade", htmlAttributes: new { @class = "control-label" })
            <div class="row">
                <div class="col-10">
                    @Html.DropDownList("NomesModalidades", null, htmlAttributes: new { @class = "form-control", @id = "Modalidade" })
                    @Html.ValidationMessageFor(model => model.ModalidadeId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-4">
            @Html.LabelFor(model => model.Nome, "Código da turma", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-4">
            @Html.LabelFor(model => model.ModalidadeId, "Nível", htmlAttributes: new { @class = "control-label" })
            <div class="row">
                <div class="col-10">
                    @Html.DropDownList("NivelAtletismo", null, htmlAttributes: new { @class = "form-control", @id = "Modalidade" })
                    @Html.ValidationMessageFor(model => model.ModalidadeId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @Html.LabelFor(model => model.ModalidadeId, "Turno", htmlAttributes: new { @class = "control-label" })

        @Html.EnumDropDownListFor(model => model.Modalidade, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Turno, "", new { @class = "text-danger" })

    </div>
    </div>