<!DOCTYPE html>
<html>
<head>
    <title>CTDEO</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Custom styles for this template-->
    <link href="~/Content/CostumStyle.css" rel="stylesheet">
</head>

<body class="sticky-footer" id="page-top">

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 col-xs-1" id="sidebar">
                <div class="list-group">
                    <a data-target="#menu1sub1" class="list-group-item" data-toggle="collapse" aria-expanded="false">
                        <i class="fa fa-fw fa-address-card-o"></i>Alunos
                    </a>
                    <div class="collapse in" id="menu1sub1">
                        <a href="@Url.Action("Cadastrar", "Alunos")" class="list-group-item" data-parent="menu1sub1">Cadastro</a>
                        <a href="@Url.Action("IndexAlunos", "Alunos")" class="list-group-item" data-parent="menu1sub1">Listagem</a>
                    </div>
                    <a href="@Url.Action("Create", "Turmas")" class="list-group-item">
                        <i class="fa fa-fw fa-users"></i>
                        <span class="hidden-sm-down">Turmas</span>
                    </a>
                    <a href="#menu3" class="list-group-item">
                        <i class="fa fa-fw fa-trophy"></i>
                        <span class="hidden-sm-down">Competições</span>
                    </a>
                    <a href="#menu4" class="list-group-item">
                        <i class="fa fa-fw fa-user-circle"></i>
                        <span class="hidden-sm-down">Equipe</span>
                    </a>
                    <a data-target="#menu4sub1" class="list-group-item" data-toggle="collapse" aria-expanded="false">
                        <i class="fa fa-fw fa-table"></i>Finanças
                    </a>
                    <div class="collapse in" id="menu4sub1">
                        <a data-target="#menu4sub2" class="list-group-item" data-toggle="collapse" aria-expanded="false">
                            <i class="fa fa-fw fa-table"></i>Gastos
                        </a>
                        <div class="collapse in" id="menu4sub2">
                            <a href="@Url.Action("Cadastrar", "Gastos")" class="list-group-item" data-parent="menu4sub2">Cadastrar</a>
                            <a href="@Url.Action("Index", "Gastos")" class="list-group-item" data-parent="menu4sub2">Listagem</a>
                        </div>
                        <a data-target="#menu4sub3" class="list-group-item" data-toggle="collapse" aria-expanded="false">
                            <i class="fa fa-fw fa-table"></i>Orçamento
                        </a>
                        <div class="collapse in" id="menu4sub3">
                            <a href="@Url.Action("Cadastrar", "Orcamento")" class="list-group-item" data-parent="menu4sub3">Cadastrar</a>
                            <a href="@Url.Action("Index", "Orcamento")" class="list-group-item" data-parent="menu4sub3">Listagem</a>
                        </div>
                    </div>
                    <a href="#menu4" class="list-group-item">
                        <i class="fa fa-fw fa-area-chart"></i>
                        <span class="hidden-sm-down">Gráficos</span>
                    </a>
                    <a href=”#sidebar” data-toggle=”collapse”>
                        <i class=”fa fa-navicon fa-lg”></i>
                    </a>
                </div>
            </div>


            <main class="col-md-10 col-xs-11">
                <div class="jumbotron-fluid .fill">Sistema Gerencial CTDEO</div>
                <div class="container body-content .container-fluid .content-wrapper">
                    @RenderBody()
                </div>
            </main>
            <footer class="sticky-footer">
                <div class="text-center">
                    <small>Desenvolvido por Tainara Campos</small>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
    <script src="~/Scripts/CustomScripts.js"></script>
</body>
</html>